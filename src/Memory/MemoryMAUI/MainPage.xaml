<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryMAUI.MainPage">
    
<ContentPage.Resources>
    <Style TargetType="Button" >
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
    </Style>
</ContentPage.Resources>
        

    <ScrollView>
        
        <Grid>
            
            <Label
             Text="Memory"
             FontSize="50"
             FontAttributes="Bold"
             HorizontalOptions="Center"/>
            
            <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Start"
            Padding="30,0"
            Spacing="25"
            WidthRequest="250">

             <Button
             Text="Singleplayer"
             SemanticProperties.Hint="Button which creates a game in singleplayer"/>

            <Button
                Text="2 players"
                SemanticProperties.Hint="Button which creates a game for 2 players"/>

            <Button
                Text="Game rules"
                SemanticProperties.Hint="Button which shows the game rules"/>

            <Button
                Text="Leaderboard"
                SemanticProperties.Hint="Button which shows the leaderboard"/>

            <Button
                Text="Credits"
                SemanticProperties.Hint="Button which shows the credits of the game"/>

            <Button
                Text="Quit Game" 
                SemanticProperties.Hint="Button which leaves the game"
                HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
