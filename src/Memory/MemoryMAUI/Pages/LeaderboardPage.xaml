<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryMAUI.LeaderboardPage"
             Title="Leaderboard">
    <VerticalStackLayout>
        <Label
            Text="Memory"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            BackgroundColor="DarkSalmon"
            FontSize="Header"
            Padding="40 0 0 0 "/>

        <Label
            Text="Leaderboard"
            BackgroundColor="LightSalmon"
            HorizontalOptions="Center"
            Padding="100 0 50 0"
            FontSize="Large"
            />

        <HorizontalStackLayout
            HorizontalOptions="Center"
            >
            <Label
                Text="Grid size: "
                Padding="6 0 0 0"
                FontSize="Medium"/>

            <Button
                Text="4x4"/>

            <Button
                Text="4x5"/>

            <Button
                Text="4x6"/>

            <Button
                Text="5x6"/>

            <Button
                Text="6x6"/>

            <Button
                Text="6x8"/>
               
                
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>