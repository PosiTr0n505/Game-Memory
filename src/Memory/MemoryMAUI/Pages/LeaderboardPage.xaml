<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MemoryMAUI.Resources.Views"
             x:Class="MemoryMAUI.Pages.LeaderboardPage"
             xmlns:lib="clr-namespace:MemoryLib.Models;assembly=MemoryLib"
             xmlns:Pages="clr-namespace:MemoryMAUI.Pages"
             Title="Leaderboard"
             BackgroundImageSource="{AppThemeBinding  Light='backgroundlighttheme.png', Dark='backgrounddarktheme.png'}">

    <Grid
        ColumnDefinitions="*,3*,*"
        RowDefinitions="120,Auto,Auto,*">

        <Button
            Text="Cancel"
            FontSize="18"
            Padding="20, 10"
            BorderColor="Black"
            TextColor="White"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Grid.Row="0"
            Grid.Column="0"/>

        <views:MemoryLabel
            Grid.Column="1"/>

        <Label
            Text="Leaderboard"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            FontSize="Large"
            Grid.Row="1"
            Grid.Column="1"
            Padding="20"/>

        <Label
            Text="Grid size: "
            Padding="40,3,0,0"
            FontSize="Medium"
            Grid.Row="2"
            Grid.Column="1"/>
        
        <views:GridButtons
            Grid.Row="2"
            Grid.Column="1"/>


        <!--        <ScrollView
            Grid.Row="3" 
            Grid.Column="1"
            MaximumWidthRequest="800">
-->

                <CollectionView ItemsSource="{Binding Scores}" MaximumHeightRequest="800"
                          x:DataType="Pages:LeaderboardPage"
                          Grid.Row="3" 
                          Grid.Column="1">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <views:LeadeboardCell/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

    </Grid>
</ContentPage>