<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Label" x:Key="LabelUnderline" >
        <Setter Property="TextDecorations" Value="Underline"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light='White'}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelBold" >
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light='White'}"/>
    </Style>
    
    <Style TargetType="Button" >
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
    </Style>
    
    <Style TargetType="Button" x:Key="GridBtn">
        <Setter Property="HeightRequest" Value="30"/>
        <Setter Property="WidthRequest" Value="60"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
    </Style>
    <Style TargetType="Button" x:Key="ThemesBtn">
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="WidthRequest" Value="100"/>
        <Setter Property="Margin" Value="20"/>
    </Style>

    <Style TargetType="Entry" x:Key="EntryConfigPage">
        <Setter Property="WidthRequest" Value="200"/>
        <Setter Property="HeightRequest" Value="44"/>
    </Style>

    <Style TargetType="Border" x:Key="LeaderboardCellStyle">
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Stroke" Value="Black"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark='Black', Light='White'}"/>
        <Setter Property="MinimumWidthRequest" Value="200"/>
    </Style>
    
    

</ResourceDictionary>