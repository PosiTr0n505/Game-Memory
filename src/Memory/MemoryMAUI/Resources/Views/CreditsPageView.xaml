<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryMAUI.Resources.Views.CreditsPageView"
             xmlns:views="clr-namespace:MemoryMAUI.Resources.Views">
    <Border 
     Stroke="#FFFFFF"
     Grid.ColumnSpan="5"
     Grid.Column="3"
     Grid.Row="1">

        <Grid>
            <Label 
                Style="{StaticResource LabelUnderline}"
                HorizontalOptions="Center"
                FontSize="30"
                FontAttributes="Bold"
                Text="Credits"
                Grid.Column="1"
                Grid.Row="1"/>


            <Label
                Text="Jeu réalise par notre groupe, composé de : &#10;
                HALILOU Sami, JABBOUR Ghassan, PERRIER Mylan &#10;
                Crédits vers le/les site(s) ou a potentiellement utilisé les images... &#10;
                Références et sources potentielles. &#x0a; &#x0a;
                Copyright"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Grid.Column="1"
                Grid.Row="2"
                Grid.RowSpan="3"/>

        </Grid>
    </Border>

</ContentView>

